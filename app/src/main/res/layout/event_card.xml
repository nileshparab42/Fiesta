<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="390dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgEvent"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img0" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Freshers Party"
                android:textColor="#1E1E1E"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/shdes"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginHorizontal="20dp"
                android:text="For the celebrations of Republic Day, the Student Committee of Watumull invites you"
                android:textColor="#1E1E1E"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/Rs"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Price: â‚¹"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#50009F"
                    android:onClick="onClickReadme"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textPrice"
                    app:layout_constraintStart_toEndOf="@+id/Rs"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="110"
                    android:textColor="#50009F"
                    android:onClick="onClickReadme"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/paybtn"
                    android:layout_marginStart="80dp"
                    android:layout_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/textPrice"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/background_btn"
                    android:text="pay"
                    android:textSize="15sp"
                    app:cornerRadius="20dp" />

            </LinearLayout>


        </LinearLayout>



</androidx.cardview.widget.CardView>