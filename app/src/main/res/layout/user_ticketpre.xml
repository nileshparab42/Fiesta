<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card1"
    android:layout_width="330dp"
    android:layout_gravity="center"
    android:layout_height="250dp"
    app:cardCornerRadius="15dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginBottom="20dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="10dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/poppins_bold"
        android:text="Freshers Party"
        android:elevation="110dp"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        />
    <View
        android:id="@+id/view1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:translationZ="1dp"
        android:background="@drawable/card_gredient"
        android:elevation="100dp"
        />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:elevation="110dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Rs. 20"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:elevation="110dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Name: Nilesh Parab"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <TextView
        android:id="@+id/uemail"
        app:layout_constraintTop_toTopOf="@id/uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:elevation="110dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Email: nileshparab5623@gmail.com"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <TextView
        android:id="@+id/tid"
        app:layout_constraintTop_toTopOf="@id/uemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:elevation="110dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Transaction Id: ABCDEFGHI"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:src="@drawable/stamp"/>

    <!--                    <ImageView-->
    <!--                        app:layout_constraintStart_toStartOf="parent"-->
    <!--                        app:layout_constraintTop_toTopOf="@+id/n3"-->
    <!--                        android:layout_width="50dp"-->
    <!--                        android:layout_height="50dp"-->
    <!--                        android:layout_gravity="start"-->
    <!--                        android:layout_marginLeft="30dp"-->
    <!--                        android:layout_marginTop="35dp"-->
    <!--                        android:src="@drawable/ss_logo" />-->


    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="30dp"
        android:elevation="100dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Fiesta"
        android:textColor="@color/active"
        android:textSize="20dp" />

    <Button
        android:id="@+id/tktbtn"
        android:text="View"
        android:background="@drawable/background_btn"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="200dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="@id/tid"/>


</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>

