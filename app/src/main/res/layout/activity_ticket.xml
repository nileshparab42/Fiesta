<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal"
    tools:context=".Ticket">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="550dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:elevation="100dp"
                android:layout_height="170dp"
                android:background="@drawable/card_gredient"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Freshers Party"
                    android:elevation="100dp"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="70dp"
                    android:elevation="100dp"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="40dp"
                    android:background="#fff" />





                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="100dp"
                android:layout_marginTop="80dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_bold"
                android:text="Date: 1 March 2023"
                android:textColor="@color/white"
                android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="100dp"
                    android:layout_marginTop="100dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Time: 7p.m. to 9p.m"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="100dp"
                    android:layout_marginTop="120dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Price: Rs. 100"
                    android:textColor="@color/white"
                    android:textSize="15sp" />


            <ImageView
                android:layout_marginTop="160dp"
                android:elevation="100dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/img0"
                android:scaleType="fitXY"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="100dp"
                    android:textStyle="bold"
                    android:layout_marginTop="385dp"
                    android:layout_marginLeft="30dp"
                    android:text="Name: Nilesh Parab"
                    android:textColor="@color/purple_700"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="100dp"
                    android:layout_marginTop="415dp"
                    android:layout_marginLeft="30dp"
                    android:text="Email: nileshparab5623@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="100dp"
                    android:layout_marginTop="440dp"
                    android:layout_marginLeft="30dp"
                    android:text="Phone No: 9082286717"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ss_logo"
                    android:layout_marginTop="450dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="100dp"
                    android:layout_marginRight="30dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="490dp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginLeft="30dp"
                    android:text="Fiesta"
                    android:textColor="@color/active"
                    android:textSize="20dp" />


            </FrameLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>